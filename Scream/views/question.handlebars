        .title-next {
            width: 100%;
            height: 1.5em;
            text-align: left;
            margin: 0 5px;
        }
        
        .next-btn {
            height: 100%;
            float: right;
        }

        #goPage {
            width: 5rem;
            height: 2.5rem;
            margin-top: 120%;
            margin-right: 130px;
            color: #ccda46;
            cursor: pointer;
            font-size: 2rem;
            background-color: #fcf7cd;
            border: 3px double rgb(95, 135, 73);
            border-radius: 30%;
        }

        #goPage:hover {
            background-color: rgb(95, 135, 73);
            color: beige;
            border: 3px beige double;
        }
        

        h2 {
            display: inline-block;
