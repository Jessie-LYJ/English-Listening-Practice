        .video-js {
            color: #ccda46; /*rgb(95, 135, 73)*/
            font-size: 12px;           
            width: 800px;
            height: 450px;
            margin: 30px auto 40px;
        }

        .vjs-default-skin .vjs-big-play-button {
            font-size: 3em;
            line-height: 1.5em;
            height: 1.5em;
            width: 3em;
            border: 3px solid #ccda46;
            border-radius: 0.6em;
        }

        .video-js .vjs-big-play-button {
            background-color: #fcf7cd;
            background-color: rgba(#fcf7cd, 0.7);
        }

        .video-js .vjs-big-play-button:before {
            font-size: 4.5em;
        }

        .vjs-paused .vjs-big-play-button {
            display: block;
        }

        .video-js .vjs-control-bar {
            display: none;
        }
        
