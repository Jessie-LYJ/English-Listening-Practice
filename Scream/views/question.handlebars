        input[type="button"] {
            display: inline-block;
            font-size: auto;
            text-align: center;
            margin-left: 2em;
            width: 550px;
            height: 80px;
            color: #435065;
            background-color: rgb(255, 255, 255);
            border-width: 3px;
            border-style: solid;
            border-color: rgb(95, 135, 73);
            border-image: initial;
            border-radius: 100px;
            box-shadow: 0 0.125rem 0.125rem 0 rgba(0,0,0,.1);
            transition: all 0.2s ease-out 0s; 
            /*border:.0625rem solid #007531; */  
        }

        input[type="button"]:hover {
            background-color: rgb(95, 135, 73);
